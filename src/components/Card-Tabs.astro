        display: inline-flex;
        width: 100%;
    }


    .tab {
        border: 4px solid rgb(230, 230, 230);
        text-align: center;
        padding: 5px;
        margin-top: 20px;
        flex-grow: 1;
    }

    .tab:hover {
        background-color: rgba(127, 255, 212, 0.585);
        cursor: pointer;
    }


    .code-shown {
        display: inline;
        color: greenyellow;
    }

    .code-hidden {
        display: none;
    }

